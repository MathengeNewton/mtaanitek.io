# The Running Coach - Backend Environment Variables

# Application
NODE_ENV=development
PORT=4500

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5433
DATABASE_USER=running_coach
DATABASE_PASSWORD=running_coach_pass
DATABASE_NAME=running_coach_db

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1d

# Strava OAuth Configuration
STRAVA_CLIENT_ID=your_strava_client_id
STRAVA_CLIENT_SECRET=your_strava_client_secret
STRAVA_REDIRECT_URI=https://training-coach.ujuzi.co.de/training-signup/callback
STRAVA_SCOPE=activity:read_all,profile:read_all
